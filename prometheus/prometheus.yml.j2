---
global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'rpki-client'
    scrape_interval: 15s
    scheme: https
    tls_config:
      ca_file: /etc/prometheus/certs/root.crt
      cert_file: /etc/prometheus/certs/client.crt
      key_file: /etc/prometheus/certs/client.key
      insecure_skip_verify: false
    metrics_path: /metrics/rpki-client.metrics
    static_configs:
      - targets:
        {% for ip in ips %}
- '{{ ip }}'
        {% endfor %}
